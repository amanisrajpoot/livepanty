# Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://livepanty:livepanty123@localhost:5432/livepanty
DB_HOST=localhost
DB_PORT=5432
DB_NAME=livepanty
DB_USER=livepanty
DB_PASSWORD=livepanty123

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=30d

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production

# Client Configuration
CLIENT_URL=http://localhost:3000
API_URL=http://localhost:3001

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# AWS S3 Configuration (for document storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=livepanty-documents

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@livepanty.com

# Age Verification Service Configuration
AGE_VERIFICATION_API_KEY=your-age-verification-api-key
AGE_VERIFICATION_API_URL=https://api.age-verification-service.com

# Content Moderation Configuration
MODERATION_API_KEY=your-moderation-api-key
MODERATION_API_URL=https://api.moderation-service.com

# TURN Server Configuration (for WebRTC)
TURN_SERVERS=turn:username:password@turn.example.com:3478
STUN_SERVERS=stun:stun.example.com:3478

# Mediasoup Configuration
MEDIASOUP_NUM_WORKERS=1
MEDIASOUP_MIN_PORT=40000
MEDIASOUP_MAX_PORT=49999
ANNOUNCED_IP=127.0.0.1

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Security Configuration
BCRYPT_ROUNDS=12
TOKEN_EXPIRE=3600
RESET_TOKEN_EXPIRE=3600

# Business Configuration
PLATFORM_FEE_PERCENTAGE=30
MINIMUM_PAYOUT_AMOUNT=1000
TOKEN_CONVERSION_RATE=100
DEFAULT_CURRENCY=USD

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_PORT=9090

# Development Configuration
DEBUG=true
VERBOSE_LOGGING=true
ENABLE_SWAGGER=true

